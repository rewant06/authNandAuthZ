/* Navbar.css - pixel tweaks & reduced motion support */

/* subtle shadow on hover for logo */
.group:hover .next-image-wrapper,
.group:hover img {
  filter: drop-shadow(0 6px 20px rgba(99, 102, 241, 0.12));
}

/* For users who prefer reduced motion, respect it */
@media (prefers-reduced-motion: reduce) {
  .group,
  .group * {
    transition: none !important;
    animation: none !important;
  }
}


/* ensure gradient text is visible cross-browser */
.brand-title {
  display: inline-block; /* ensures bg-clip works reliably */
  color: transparent;
  background-image: linear-gradient(90deg,
    hsl(var(--primary)),
    hsl(var(--accent))
  );
  -webkit-background-clip: text; /* Safari */
  background-clip: text;         /* modern browsers */
  /* tiny fallback for older browsers: show primary color as text color */
  /* this will be ignored by browsers that respect background-clip:text */
  color: hsl(var(--primary));
}
